@{
    <!--updating title for page-->
    ViewBag.Title = "Add a Movie";
}
<!--Bringing in the MovieEntry model-->
@model Assignment3.Models.MovieEntry


<div>
    <h2>Add a Movie Here</h2>
</div>

<!--Creating a form for adding movies-->

<!--connecting form to the action-->
<form asp-action="AddMovies" method="post">
    
    <!--creating different labels and then tying the label to the model-->
    <!--making specified fields required as well-->
    <div>
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" required/>
    </div>

    <div>
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" required/>
    </div>

    <div>
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" required/>
    </div>

    <div>
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" required/>
    </div>

    <div>
        <label asp-for="Rating">Rating:</label>
        <!--Creating options from a drop down list for selecting a rating-->
        <select asp-for="Rating" required>
            <option value="">Select Rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div>
        <label asp-for="Edited">Edited:</label>
        <!--creating a drop down for edited to select if it was edited-->
        <select asp-for="Edited">
            <option value="">Select One</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    
    <div>
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo"/>
    </div>

    <div>
        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes"/>
    </div>

    <!--submit button for adding the movie-->
    <button type="submit">Add Movie</button>
</form>

