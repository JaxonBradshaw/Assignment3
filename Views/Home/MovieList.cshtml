@{
    ViewBag.Title = "Movie List";
}
<!--bringing in MovieEntry model-->
@model IEnumerable<Assignment3.Models.MovieEntry>

<div>
    <h2>Here are the movies currently on the list</h2>

    <table>
        <!--making header for each category-->
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To</th><th>Notes</th></tr>
        </thead>

        <tbody>
            <!--Loop to go through all of the movie entries-->
            @foreach (Assignment3.Models.MovieEntry x in Model)
            {
                <!--making sure independence day doesn't show up-->
                @if (x.Title != "Independence Day")
                {
                    <tr>
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        <td>@x.Edited</td>
                        <td>@x.LentTo</td>
                        <td>@x.Notes</td>
                    </tr>
                }

            }
        </tbody>

    </table>
</div>